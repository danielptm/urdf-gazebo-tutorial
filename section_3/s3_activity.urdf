<?xml version="1.0"?>
<robot name="my_robot">
    <material name="blue">
        <color rgba="0 0 0.5 1" />
    </material>
    <material name="grey">
        <color rgba="0.5 0.5 0.5 1" />
    </material>
    <link name="base_link">
        <visual>
            <geometry>
                <box size="0.6 0.4 0.2" />
            </geometry>
            <origin xyz="0 0 0.1" rpy="0 0 0" />
            <material name="blue" />
        </visual>
    </link>
    <link name="right_link">
        <visual>
            <geometry>
                <cylinder radius="0.15" length="0.075" />
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <material name="grey"/>
        </visual>
    </link>
    <link name="left_link">
        <visual>
            <geometry>
                <cylinder radius="0.15" length="0.075" />
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <material name="grey"/>
        </visual>
    </link>
    <link name="center_link">
        <visual>
            <geometry>
                <sphere radius="0.075" />
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <material name="grey"/>
        </visual>
    </link>
    <joint name="base_right_joint" type="revolute">
        <parent link="base_link" />
        <child link="left_link" />
        <origin xyz="-0.2 -0.25 0" rpy="1.57 0 0" />
        <axis xyz="0 0 1" />
        <limit lower="-1.57" upper="1.57" velocity="100" effort="100" />
    </joint>
    <joint name="base_left_joint" type="revolute">
        <parent link="base_link" />
        <child link="right_link" />
        <origin xyz="-0.2 0.25 0" rpy="1.57 0 0" />
        <axis xyz="0 0 1" />
        <limit lower="-1.57" upper="1.57" velocity="100" effort="100" />
    </joint>
        <joint name="base_center_joint" type="fixed">
        <parent link="base_link" />
        <child link="center_link" />
        <origin xyz="0.25 0 -0.075" rpy="0 0 0" />
    </joint>
</robot>
